#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

/{
	behaviors {
		ht: hold_tap {
			compatible = "zmk,behavior-hold-tap";
			label = "hold-tap";
			#binding-cells = <2>;
			flavor = "hold-preferred";
			tapping-term-ms = <200>;
			bindings = <&kp>, <&kp>;
		};
		mo_sk: momentary_sticky{
			compatible = "zmk,behavior-hold-tap";
			label = "momentary-sticky";
			#binding-cells = <2>;
			flavor = "hold-preferred";
			tapping-term-ms = <200>;
			bindings = <&mo>, <&sk>;
		};
		td_lbrc_lbkt: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            label = "LEFT_BRACE_BRACKET";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LBRC>, <&kp LBKT>;
        };
		td_rbrc_rbkt: tap_dance_1 {
            compatible = "zmk,behavior-tap-dance";
            label = "RIGHT_BRACE_BRACKET";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp RBRC>, <&kp RBKT>;
        };
	};
};

